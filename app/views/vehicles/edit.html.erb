<h1>Editing vehicle</h1>

<% form_for(@vehicle, :url => vehicle_path(@vehicle)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :seat_count %><br />
    <%= f.text_field :seat_count %>
  </p>
	 <h2>Sticker Information</h2>
	<p>
		<%= f.label "Price" %><br />
		<%= text_field_tag "vehicle[metadata][sticker_information][price]", @vehicle.metadata["sticker_information"]["price"] %>
	</p>

	<p>
		<%= f.label "Gas Mileage (City)" %><br />
		<%= text_field_tag "vehicle[metadata][sticker_information][gas_mileage][city]", @vehicle.metadata["sticker_information"]["gas_mileage"]["city"] %>
	</p>

	<p>
		<%= f.label "Gas Mileage (Highway)" %><br />
		<%= text_field_tag "vehicle[metadata][sticker_information][gas_mileage][highway]", @vehicle.metadata["sticker_information"]["gas_mileage"]["highway"] %>
	</p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', vehicle_path(@vehicle) %> |
<%= link_to 'Back', vehicles_path %>