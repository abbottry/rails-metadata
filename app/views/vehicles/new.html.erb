<h1>New vehicle</h1>

<% form_for(@vehicle) do |f| %>
  <%= f.error_messages %>

	 <p>
	<%= f.label :vehicle_type %>
	<%= f.select :vehicle_type, Vehicle::VEHICLE_TYPES %>
	</p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.label :seat_count %><br />
    <%= f.text_field :seat_count %>
  </p>

	<h2>Sticker Information</h2>
	<p>
		<%= f.label "Price" %><br />
		<%= text_field_tag "vehicle[metadata][sticker_information][price]" %>
	</p>

	<p>
		<%= f.label "Gas Mileage (City)" %><br />
		<%= text_field_tag "vehicle[metadata][sticker_information][gas_mileage][city]" %>
	</p>

	<p>
		<%= f.label "Gas Mileage (Highway)" %><br />
		<%= text_field_tag "vehicle[metadata][sticker_information][gas_mileage][highway]" %>
	</p>
	
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', vehicles_path %>